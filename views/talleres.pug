    //- const base = document.querySelector('#talleres')
    const ts = d3.select('#talleres')
        .selectAll('div')
      .data(talleres)
      .enter()
        .append('div').classed('taller', true)
        
    ts.append('h3').text(d => d.taller)
    ts.append('h4').text(d => d.docente)
        
    ts.append('div').style('background-image', d => `url(${d.pic})`)
      .append('p').text(d => d.descripcion)
    
    ts.on('click', (e) => e.target.closest('.taller').classList.toggle('activo'))
  
